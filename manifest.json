{
  "manifest_version": 2,
  "name": "block-clickb8-thumbs",
  "version": "1.0",
  "description": "We are going to block those annoying clickbait thumbnails.",
  "background": {
    "scripts": ["main.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/*",
    "*://i.ytimg.com/*"
  ],
  "applications": {
    "gecko": {
      "id": "block-clickb8-thumbs@jesse.im"
    }
  },
  "browser_action": {
    "default_icon": {
      "19": "button/1x/tv_off_18dp.png",
      "38": "button/2x/tv_off_18dp.png"
    },
    "default_title": "Enable/disable thumbnails"
  }
}