{
  "manifest_version": 2,
  "name": "block-clickb8-thumbs",
  "version": "1.0",
  "description": "We are going to block those annoying clickbait thumbnails.",
  "background": {
    "scripts": ["main.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/*",
    "*://i.ytimg.com/*"
  ],
  "applications": {
    "gecko": {
      "id": "block-clickb8-thumbs@jesse.im"
    }
  }
}